include ../header.pug

body#app(ng-app="app", ng-controller="tasks-controller")
  div.uk-card.uk-card-body
     h3.uk-card-title Welcome to The task App
     div(uk-grid)
         div.uk-width-expand
            input.uk-input(ng-model="item.body", placeholder="Write something ...")
         div.uk-width-auto(ng-show="loading")
             div(uk-spinner)
         div.uk-width-auto(ng-hide="loading")
            button.uk-button.uk-button-primary(
                ng-click="add(item)",
                ng-hide="item.editing",
                ng-disabled="!item.body"
            )
                span(uk-icon="plus")
            button.uk-button.uk-button-secondary(ng-click="update(item)", ng-show="item.editing", ng-disabled="!item.body")
                span(uk-icon="check")
     div(uk-grid)
        ul.uk-width-expand.uk-list.uk-list-divider
            li(ng-repeat="item in lists")
                div(uk-grid)
                    div.uk-width-expand
                        span.task-body(ng-bind="item.body", ng-class="{'uk-text-muted': item.done}")
                    div.uk-width-auto
                        button.uk-button.uk-button-small.uk-button-default(ng-click="edit(item)")
                            span(uk-icon="pencil")
                        button.uk-button.uk-button-small.uk-button-danger(ng-click="done(item)", ng-hide="item.done")
                            span(uk-icon="close")

include ../footer.pug